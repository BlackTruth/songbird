{
  "compilerOptions": {
    "module": "ES6",
    "outDir": "./dist/",
    "rootDir": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/typings"]
  },

  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compileOnSave": true
}
