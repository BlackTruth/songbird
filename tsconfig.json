{
  "compilerOptions": {
    "module": "amd",
    "outFile": "./dist/bundle.js",
    "outDir": "./dist/",
    "rootDir": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },

  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compileOnSave": true
}
